  <body>

  <nav class="top-bar">
    <ul class="title-area">
      <!-- Title Area -->
      <li class="name">
        <h1><a href="#">Design With Me</a></h1>
      </li>
      <!-- Remove the class "menu-icon" to get rid of menu icon. Take out "Menu" to just have icon alone -->
      <li class="toggle-topbar menu-icon"><a href="#"><span>Menu</span></a></li>
    </ul>

    <section class="top-bar-section">
      <!-- Left Nav Section -->
      <ul class="left">
        <li class="divider"></li>
        <li class="active"><%= link_to "Companies", companies_path %></li>
        <li><a href="#"><%= link_to "Designers", users_path %></a></li>
        <li class="divider"></li>
      </ul>

      <!-- Right Nav Section -->
      <ul class="right">
        <% if @current_user.nil? %>
            <li><%= link_to "Log In", login_path %></li>
        <% else %>
            <li>Welcome back <%= link_to "Log Out", logout_path %></li>
        <% end %>
      </ul>
    </section>
  </nav>
