<h1>Designers</h1>

<%= link_to 'New Designer', new_user_path, class: 'button' %>
<br/>
<br/>

<div class="row">
  <div class="large-8 columns">
    <table width="100%">
      <tr>
        <th>Name</th>
        <th>Email</th>

        <th>Actions</th>
      </tr>

      <% @users.each do |user| %>
          <tr>
            <td><%=link_to user.name, edit_user_path(user) %></td>
            <td><%= user.email %></td>
            <td>
              <%= link_to 'Delete', user, method: :delete, data: { confirm: 'Are you sure?' } %>
            </td>
          </tr>
      <% end %>
    </table>
  </div>
</div>

<br />


