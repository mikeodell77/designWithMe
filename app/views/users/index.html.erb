<h1>Designers</h1>

<%= link_to 'New Designer', new_user_path %>
<br/>
<br/>

<div class="row">
  <div class="large-8 columns">
    <table width="100%">
      <tr>
        <th>First Name</th>
        <th>Last Name</th>
        <th>Email</th>
        <th>Actions</th>
      </tr>

      <% @users.each do |user| %>
          <tr>
            <td><%= user.first_name %></td>
            <td><%= user.last_name %></td>
            <td><%= user.email %></td>
            <td>
              <%= link_to 'Edit', edit_user_path(user) %>
              <%= link_to 'Destroy', user, method: :delete, data: { confirm: 'Are you sure?' } %>
            </td>
          </tr>
      <% end %>
    </table>
  </div>
</div>

<br />


