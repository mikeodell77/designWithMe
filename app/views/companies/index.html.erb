<h1>Listing companies</h1>

<%= link_to 'New Company', new_company_path %>
<br/>
<br/>
<p>
  Download:
  <%= link_to "CSV", companies_path(format: "csv") %>
</p>
<div class="row">
  <div class="large-8 columns">
    <table width="100%">
      <tr>
        <th>Name</th>
        <th>Comments</th>
        <th>Actions</th>
      </tr>

    <% @companies.each do |company| %>
      <tr>
        <td><%= company.name %></td>
        <td><%= company.comments %></td>
        <td>
          <%= link_to 'Show', company %>
          <%= link_to 'Edit', edit_company_path(company) %>
          <%= link_to 'Destroy', company, method: :delete, data: { confirm: 'Are you sure?' } %>
        </td>
      </tr>
    <% end %>
    </table>
  </div>
</div>

<br />

<h2>Import Companies</h2>
<%= form_tag import_companies_path, multipart: true do %>
    <%= file_field_tag :file %>
    <%= submit_tag "Import" %>
<% end %>


